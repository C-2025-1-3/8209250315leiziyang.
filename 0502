student.h
class Student              //类声明
{public:         //公用成员函数原型声明
	void display();
	void set_value(int n,const char na[], char s);
private:
	int num;
	char name[20];
	char sex;
};

student.cpp
#include <iostream>
#include"student.h"   //不要漏写此行，否则编译通不过
using namespace std;
void Student::display()         //在类外定义display类函数
{
	cout<<"num:" << num << endl;
	cout<<"name:" << name << endl;
	cout<<"sex:" << sex << endl;
}

源.cpp
#include <iostream>             //将类声明头文件包含进来
#include "student.h"
int main()
{  
Student stud;                //定义对象
Student stud1(007,"tcg", 'm');
stud.display();              //执行stud对象的display函数 
return 0;
}
